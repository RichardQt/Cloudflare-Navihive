    },
    // D1数据库绑定
    "d1_databases": [
        {
            "binding": "DB",
            "database_name": "navigation-db",
            "database_id": "b85f8b1f-3e7f-4712-8c76-42c3b56eff01"
        }
    ],
    "vars": {
        "AUTH_ENABLED": "true",
        "AUTH_USERNAME": "richardli",
        "AUTH_PASSWORD": "richardli",
        "AUTH_SECRET": "richardli"
    }
}
